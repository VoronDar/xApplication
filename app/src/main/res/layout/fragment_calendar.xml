<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_height="match_parent"
    android:id = "@+id/fragment_root"
    tools:context=".ui.views.CalendarFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:layout_constraintBottom_toBottomOf="parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ВС"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#892555"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ПН"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ВТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "СР"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ЧТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "ПТ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#26356B"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text = "СБ"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"
                    android:textColor="#892555"
                    android:textSize="14dp"/>

            </LinearLayout>
            <Space
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_width="0dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id = "@+id/recyclerView"
                android:overScrollMode="never"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    <View
        style="@style/divider"
        android:paddingTop = "20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="invisible"
            android:background="@color/black"
            android:layout_gravity="center_vertical"
            android:id = "@+id/back_icon"
            />
    <TextView
        android:id = "@+id/date"
        style="@style/HighLightText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text = "1 may, 2021"
        />
        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="top"
            android:id = "@+id/delete_icon"
            />
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:id = "@+id/event_container"
        android:layout_height="match_parent">
    <include
        android:id = "@+id/event_content"
        layout = "@layout/page_event"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_height="match_parent"
        android:layout_width = "match_parent"/>
    </FrameLayout>
    <com.google.android.material.card.MaterialCardView
        style="@style/card"
        android:visibility="gone"
        app:strokeWidth="0dp"
        android:id = "@+id/noCardInfo"
        android:layout_width="match_parent"
        android:layout_margin="35dp"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <TextView
        style="@style/ArticleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_marginBottom="4dp"
        android:gravity="bottom|center_horizontal"
        android:text = "@string/calendar_no_event_info"
        />
        <TextView
            style = "@style/HighLightText"
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="top|center_horizontal"
            android:text = "@string/calendar_no_event_action"
            />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/event_recycler"
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:visibility="gone"
        android:layout_marginLeft="35dp"
        android:overScrollMode="never"
        android:layout_marginRight="35dp"
        android:layout_height="match_parent"/>

</LinearLayout>