    <style name="CommonButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">#3C6D5F</item>
        <item name="android:gravity">center</item>
        <item name = "cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "strokeWidth">1dp</item>>
        <item name = "strokeColor">@color/black</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="rippleColor">@color/purple_200</item>
        <item name="android:fontFamily">@font/actor_regular</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="IgnoreButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/ignore_button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name = "backgroundTint">@color/white</item>
        <item name = "strokeWidth">1dp</item>>
        <item name = "strokeColor">@color/white</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:fontFamily">@font/actor_regular</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">#515B8E</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:fontFamily">@font/opensans_light</item>
    </style>

    <style name="RoundButtonClicked">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/round_button_selected</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>


    <style name="EmphasizedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name = "backgroundTint">@color/white</item>
        <item name="rippleColor">@color/purple_200</item>
        <item name = "cornerRadius">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name = "strokeWidth">1dp</item>>
        <item name="android:elevation">8dp</item>
        <item name = "strokeColor">@color/black</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:fontFamily">@font/actor_regular</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


    <style name="card">
        <item name = "cornerRadius">3dp</item>
        <item name = "strokeWidth">0.8dp</item>
        <item name="android:elevation">12dp</item>
        <item name = "strokeColor">@color/black</item>
    </style>

    <style name="feetback_card">
        <item name = "cornerRadius">5dp</item>
        <item name = "strokeWidth">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name = "contentPadding">5dp</item>
        <item name="android:elevation">0dp</item>
        <item name = "strokeColor">@color/black</item>
    </style>


    <style name="divider">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>


